<% @books.with_highlights.each do |book, highlights| %>
  <div class="col-lg-4 col-md-4 mb-4">
    <div class="card-book h-100">
      <%= link_to image_tag(book.image.url , alt: t(".alt"), size: Settings.books.show.sizes),
        controller: "books", action: "show", id: book.id%>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to highlights[:title].html_safe, book_path(book) %>
        </h4>
        <h5><%= number_to_currency(book.price, :locale => :vi) %></h5>
      </div>
      <div class="card-footer">
        <%= link_to book.users_liked.count.to_s << (t ".liked") , book_path(book), method: :get %>
      </div>
    </div>
  </div>
<% end %>
